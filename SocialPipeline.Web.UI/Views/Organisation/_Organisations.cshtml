@model SocialPipeline.Web.ViewModels.Organisations.OrganisationsViewModel
@using SocialPipeline.Web.Custom.ExtensionMethods

@{
    var grid = new System.Web.Helpers.WebGrid(Model.Organisations);  
}

<div id="grid">
    @grid.GetHtml(columns: grid.Columns(  
          grid.Column("Name", format: (item) => Html.ActionLink((string)item.Name, "Details", new{ id = item.Id})),
          grid.Column("DateAdded", format:@<text>@DateTimeExtensions.ToRelativeDateTime(item.DateAdded)</text>),
          grid.Column("CreatedBy", format:@<text>@item.CreatedBy.FirstName</text>))  
        )  
</div>